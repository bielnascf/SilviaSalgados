@page
@model SilviaSalgadosWebApp.Pages.MyProfileModel
@{
    Layout = "_EmptyLayout";
}

@section CSS {
    <link rel="stylesheet" href="~/css/MyProfile/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_emptyLayout.css" asp-append-version="true" />
}

<header class="py-3 d-flex align-items-center justify-content-between">
    <div class="d-flex">
        <a asp-page="/Index" class="logo_link d-flex flex-column text-decoration-none">
            <span class="logo_silvia fw-bold">Silvia</span>
            <span class="logo_salgados ms-3 fw-bold">Salgados</span>
        </a>
    </div>
    <div class="d-flex gap-2 align-items-center">
        <a href="https://www.instagram.com/salgadossilviamp?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==" target="_blank"><img class="social_media" src="~/assets/icons/instagram-1-svgrepo-com.svg" alt="Instagram Icon"/></a>
        <a href="https://wa.me/5521968702424?text=Ol%C3%A1%2C%20Silvia!" target="_blank"><img class="social_media" src="~/assets/icons/whatsapp-svgrepo-com.svg" alt="Whatsapp Icon"/></a>
    </div>
</header>

<section class="d-flex align-items-center justify-content-between px-3 mt-5 w-100">
    <div>
        <a class="btn_back" asp-page="/Index"><img class="back_icon" src="~/assets/icons/back-svgrepo-com.svg" alt="Back Icon"/> Voltar</a>
    </div>
    <div>
        <form method="post">
            <button class="btn_logout" asp-page-handler="Logout">Sair <img src="~/assets/icons/logout-svgrepo-com.svg" alt="Logout Icon" /></button>
        </form>
    </div>
</section>

<section class="w-100 mt-5">
    <h4 class="section_title fw-bold">Meu Perfil</h4>
    <div class="section_line"></div>
</section>

<div class="mt-5 d-flex justify-content-center">
    <form class="form_container p-5 text-white d-flex gap-5" method="post" autocomplete="off">
        <fieldset class="dados_pessoais">
            <legend class="fs-4 mt-3 text-center">Dados Pessoais</legend>
            <div class="mb-3">
                <label for="userName" class="form-label">Nome Completo</label>
                <input asp-for="UsuarioViewModel.Nome" type="text" class="user_input form-control" id="userName" placeholder="Digite o seu nome">
                <span asp-validation-for="UsuarioViewModel.Nome" class="text-danger"></span>
            </div>
            <div class="d-flex align-items-center gap-3">
                <div class="mb-3">
                    <label for="userEmail" class="form-label">Email</label>
                    <input asp-for="UsuarioViewModel.Email" type="email" class="user_input opacity-75 form-control" id="userEmail" placeholder="Digite seu email" readonly>
                </div>
                <div class="mb-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <label class="form-label" for="userPassword">Senha</label>
                        <div class="toggle_password mb-2">
                            <img id="eye_icon" src="~/assets/icons/hidePassword.svg" />
                        </div>
                    </div>
                    <input asp-for="UsuarioViewModel.Senha" type="password" class="user_input form-control" id="userPassword" placeholder="Min: 8 caracteres">
                    <span asp-validation-for="UsuarioViewModel.Senha" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="userCelular">Número do Celular</label>
                <input asp-for="UsuarioViewModel.Celular" type="text" class="user_input form-control w-50" id="userCelular" placeholder="Ex: 21999999999" />
                <span asp-validation-for="UsuarioViewModel.Celular" class="text-danger"></span>
            </div>
        </fieldset>
        <fieldset>
            <legend class="fs-4 mt-3 text-center">Endereço para Entrega</legend>
            <div class="mb-3">
                <label for="userRua" class="form-label">Nome da Rua</label>
                <input asp-for="UsuarioViewModel.Rua" type="text" class="user_input form-control" id="userRua" placeholder="Digite o nome da sua rua">
                <span asp-validation-for="UsuarioViewModel.Rua" class="text-danger"></span>
            </div>
            <div class="d-flex align-items-center gap-3">
                <div class="mb-3">
                    <label for="userNumero" class="form-label">Numero</label>
                    <input asp-for="UsuarioViewModel.NumeroCasa" type="text" class="user_input form-control" id="userNumero" placeholder="Digite o numero do local">
                    <span asp-validation-for="UsuarioViewModel.NumeroCasa" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="userCidade">Cidade</label>
                    <select asp-for="UsuarioViewModel.Cidade" type="text" class="user_input form-select" id="userCidade">
                        <option value="niteroi" selected>Niterói</option>
                        <option value="saoGoncalo">São Gonçalo</option>
                        <option value="marica">Maricá</option>
                        <option value="itaipuacu">Itaipuaçu</option>
                    </select>
                </div>
            </div>
            <div class="d-flex align-items-center gap-3">
                <div class="mb-3">
                    <label for="userBairro" class="form-label">Bairro</label>
                    <input asp-for="UsuarioViewModel.Bairro" type="text" class="user_input form-control" id="userBairro" placeholder="Digite o nome do bairro">
                    <span asp-validation-for="UsuarioViewModel.Bairro" class="text-danger"></span>

                </div>
            </div>
            <div class="w-100 text-end mt-2">
                <button type="submit" class="btn_cadastrar w-50">Salvar <img src="~/assets/icons/save-alt-svgrepo-com.svg" alt="Save Icon" /></button>
            </div>
        </fieldset>
    </form>
</div>

@section Scripts {
    <script src="~/js/MyProfile/myProfile.js"></script>
}